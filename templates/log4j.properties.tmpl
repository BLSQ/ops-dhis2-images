status = warn
name = PropertiesConfig

# Console appender
appender.stdout.type = Console
appender.stdout.name = STDOUT
appender.stdout.target = SYSTEM_OUT
appender.stdout.layout.type = PatternLayout
appender.stdout.layout.pattern = %d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n

# Root logger
rootLogger.level = ${env:DEFAULT_LOG_LEVEL:-WARN}
rootLogger.appenderRefs = stdout
rootLogger.appenderRef.stdout.ref = STDOUT

# Custom loggers
logger.dhis.name = org.hisp.dhis
logger.dhis.level = ${env:DHIS_LOG_LEVEL:-WARN}

logger.startup.name = org.hisp.dhis.system.startup
logger.startup.level = info

logger.hazelcast.name = com.hazelcast
logger.hazelcast.level = ${env:HAZELCAST_LOG_LEVEL:-WARN}

logger.spring.name = org.springframework.web
logger.spring.level = ${env:SPRING_LOG_LEVEL:-WARN}

logger.hibernate.name = org.hibernate
logger.hibernate.level = ${env:HIBERNATE_LOG_LEVEL:-ERROR}
